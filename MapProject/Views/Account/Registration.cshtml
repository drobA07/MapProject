@model MapProject.DomainModel.Models.Account.RegisterModel
@{
	ViewBag.Title = "Register";
}

@*<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Create a new account.</h2>
</hgroup>*@
<div class="row-fluid">
	<div class="span12">
		<div class="well">
			@using (Html.BeginForm("Registration", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
			{
				@Html.AntiForgeryToken() 
				@Html.ValidationSummary()

				<legend class="">Регистрация</legend>
				<div class="control-group">
					@Html.LabelFor(m => m.Email, new {@class = "control-label"})
					<div class="controls">
						@Html.TextBoxFor(m => m.Email, new { @placeholder = "", @required = "required", @type = "email", @class = "input-xlarge" })
						<p class="help-block"></p>
					</div>
				</div>
				<div class="control-group">
					@Html.LabelFor(m => m.Password, new {@class = "control-label"})
					<div class="controls">
						@Html.TextBoxFor(m => m.Password, new { @placeholder = "", @required = "required", @type = "password", @class = "input-xlarge" })
						<p class="help-block"></p>
					</div>
				</div>
				<div class="control-group">
					@Html.LabelFor(m => m.ConfirmPassword, new {@class = "control-label"})
					<div class="controls">
						@Html.TextBoxFor(m => m.ConfirmPassword, new { @placeholder = "", @required = "required", @type = "password", @class = "input-xlarge" })
						<p class="help-block"></p>
					</div>
				</div>
				<div class="control-group">
					@Html.LabelFor(m => m.Prefix, new {@class = "control-label"})
					<div class="controls">
						<div class="btn-group" data-toggle="buttons-radio">
							<button type="button" class="btn">Девушка</button>
							<button type="button" class="btn">Парень</button>
						</div>
					</div>
				</div>
				<div class="control-group">
					@Html.LabelFor(m => m.FirstName, new {@class = "control-label"})
					<div class="controls">
						@Html.TextBoxFor(m => m.FirstName, new { @placeholder = "", @required = "required", @type = "text", @class = "input-xlarge" })
						<p class="help-block"></p>
					</div>
				</div>
				<div class="control-group">
					@Html.LabelFor(m => m.SecondName, new {@class = "control-label"})
					<div class="controls">
						@Html.TextBoxFor(m => m.SecondName, new { @placeholder = "", @required = "required", @type = "text", @class = "input-xlarge" })
						<p class="help-block"></p>
					</div>
				</div>
				<div class="control-group">
					@Html.LabelFor(m => m.LastName, new {@class = "control-label"})
					<div class="controls">
						@Html.TextBoxFor(m => m.LastName, new { @placeholder = "", @required = "required", @type = "text", @class = "input-xlarge" })
						<p class="help-block"></p>
					</div>
				</div>
				<div class="control-group">
					@Html.LabelFor(m => m.AgeId, new {@class = "control-label"})
					<div class="controls">
						@Html.DropDownListFor(m => m.AgeId, Model.Ages.Select(i=> new SelectListItem { Value = i.ToString(), Text = i.ToString()}) , new { @required = "required", @class = "input-xlarge" })
						<p class="help-block"></p>
					</div>
				</div>
				<div class="control-group">
					@Html.LabelFor(m => m.CountryId, new {@class = "control-label"})
					<div class="controls">
						@Html.DropDownListFor(m => m.CountryId, Model.Countries.Select(i => new SelectListItem {Value = i.Id.ToString(),Text = i.Name}), new { @required = "required", @class = "input-xlarge" })
						<p class="help-block"></p>
					</div>
				</div>
				<div class="control-group">
					@Html.LabelFor(m => m.TravelCategoryId, new {@class = "control-label"})
					<div class="controls">
						@Html.DropDownListFor(m => m.TravelCategoryId, Model.TravelCategories.Select(i => new SelectListItem {Value = i.Id.ToString(),Text = i.Name}), new { @required = "required", @class = "input-xlarge" })
						<p class="help-block"></p>
					</div>
				</div>
				<div class="control-group">
					@Html.LabelFor(m => m.TravelRankId, new {@class = "control-label"})
					<div class="controls">
						@Html.DropDownListFor(m => m.TravelRankId, Model.TravelRanks.Select(i => new SelectListItem {Value = i.Id.ToString(),Text = i.Name}), new { @required = "required", @class = "input-xlarge" })
						<p class="help-block"></p>
					</div>
				</div>
				<div class="control-group">
					@Html.LabelFor(m => m.Note, new {@class = "control-label"})
					<div class="controls">
						@Html.TextAreaFor(m => m.Note, new { @placeholder = "", @required = "required", @type = "type", @class = "input-xlarge", @row = 5 })
						<p class="help-block"></p>
					</div>
				</div>
				<div class="control-group">
					<div class="controls">
						<label class="checkbox">
							@Html.CheckBoxFor(m => m.IsSendToMail) @Html.DisplayNameFor(m => m.IsSendToMail)
						</label>
						<p class="help-block"></p>
					</div>
				</div>

				<div class="control-group">
					<div class="controls">
						<button class="btn btn-success">Присоединиться</button>
					</div>
				</div>
			}
		</div>
	</div>
</div>
